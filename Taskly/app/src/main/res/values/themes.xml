<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base app theme -->
    <style name="Base.Theme.Taskly" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryContainer">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryContainer">@color/primaryColor</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- For buttons -->
        <item name="materialButtonStyle">@style/Widget.Taskly.Button</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.YourApp.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenAnimationDuration">0</item>
        <item name="android:splashScreenTheme">@style/Base.Theme.Taskly</item>
    </style>

</resources>
