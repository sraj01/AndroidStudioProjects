    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <corners android:radius="8dp" />
                    <stroke android:width="1dp" android:color="?attr/colorControlNormal" />                    <padding android:right="12dp" android:left="12dp"/>
